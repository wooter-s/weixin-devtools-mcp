{
  "name": "weixin-devtools-mcp",
  "version": "0.0.1",
  "description": "WeChat Mini Program automation MCP server with intelligent connection, page interaction, assertion validation and network monitoring",
  "type": "module",
  "author": "Wooter Shen",
  "license": "MIT",
  "keywords": [
    "wechat",
    "miniprogram",
    "automation",
    "testing",
    "mcp",
    "model-context-protocol",
    "weixin",
    "devtools",
    "e2e",
    "ui-testing"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/wooter-s/weixin-devtools-mcp.git"
  },
  "bugs": {
    "url": "https://github.com/wooter-s/weixin-devtools-mcp/issues"
  },
  "homepage": "https://github.com/wooter-s/weixin-devtools-mcp#readme",
  "bin": {
    "weixin-devtools-mcp": "build/server.js"
  },
  "files": [
    "build"
  ],
  "scripts": {
    "build": "tsc && node -e \"require('fs').chmodSync('build/index.js', '755'); require('fs').chmodSync('build/server.js', '755')\"",
    "prepare": "npm run build",
    "watch": "tsc --watch",
    "inspector": "npx @modelcontextprotocol/inspector build/index.js",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write \"src/**/*.ts\" \"tests/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\" \"tests/**/*.ts\"",
    "typecheck": "tsc --noEmit",
    "test": "vitest --run tests/protocol/ tests/tools/ tests/utils/",
    "test:watch": "vitest tests/protocol/ tests/tools/ tests/utils/",
    "test:coverage": "vitest --coverage tests/protocol/ tests/tools/ tests/utils/",
    "test:protocol": "vitest --run tests/protocol/",
    "test:tools": "vitest --run tests/tools/",
    "test:integration": "RUN_INTEGRATION_TESTS=true vitest --run tests/integration/",
    "test:integration:watch": "RUN_INTEGRATION_TESTS=true vitest tests/integration/",
    "test:all": "npm test && npm run test:integration"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "0.6.0",
    "miniprogram-automator": "^0.12.1",
    "zod": "^3.25.76",
    "zod-to-json-schema": "^3.24.6"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@types/node": "^20.11.24",
    "@vitest/coverage-v8": "^1.6.0",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.32.0",
    "prettier": "^3.6.2",
    "typescript": "^5.3.3",
    "typescript-eslint": "^8.46.4",
    "vitest": "^1.6.0"
  }
}
